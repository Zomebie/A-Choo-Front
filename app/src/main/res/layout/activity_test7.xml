<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.selfTest.Test7">

    <LinearLayout
        android:layout_marginTop="130dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Group7번째 이미지 -->
        <!-- SW(봄웜톤), SC(여름쿨톤), AW(가을웜톤), WC(겨울쿨톤)-->

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gabriola"
            android:text="check7"
            android:textStyle="bold"
            android:textSize="35dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text=" 당신의 이미지를 골라주세요"
            android:textSize="22dp"
            android:textColor="#000000"/>

        <RadioGroup
            android:id="@+id/radioGroup7"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/SW7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="어려보이고 친밀한 느낌 / 생기있으며 발랄한 느낌"
                android:textSize="15dp"
                android:checked="false" />

            <RadioButton
                android:id="@+id/SC7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="부드러우면서 여성스러운느낌 / 우아하면서 산뜻한 느낌"
                android:textSize="15dp"
                android:checked="false" />

            <RadioButton
                android:id="@+id/AW7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="성숙하고 차분한 느낌 / 신뢰감을 주는 느낌"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/WC7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="존재감이 있는 카리스마 / 도시적이며 샤프한 느낌"
                android:textSize="15dp"
                android:checked="false" />
        </RadioGroup>

        <TextView
            android:id="@+id/complete"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:text="진단 완료"
            android:textSize="25dp"
            android:onClick="onclick"/>

    </LinearLayout>
</LinearLayout>