<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.login.JoinusActivity"
    android:background="#ffffff"
    android:gravity="center">

    <ImageButton
        android:id="@+id/joinus_back"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:maxHeight="15dp"
        android:maxWidth="15dp"
        android:src="@drawable/ic_keyboard_backspace_pink_24dp"
        android:background="#FFFFFF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACHOO"
            android:gravity="center_vertical|center"
            android:textSize="80dp"
            android:textColor="#fc8d8b"
            android:fontFamily="@font/angmuburi" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left|center_horizontal">

            <EditText
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/main_login"
                android:drawableLeft="@drawable/join_user"
                android:drawableRight="@drawable/right_join"
                android:fontFamily="@font/hansuwon_r"
                android:gravity="left|center"
                android:hint="아이디(4-12자 영문대소문자)"
                android:textSize="15dp" />

            <ImageButton
                android:id="@+id/id_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:background="@drawable/check" />
        </LinearLayout>

        <EditText
            android:id="@+id/pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/main_login"
            android:drawableLeft="@drawable/join_lock"
            android:drawableRight="@drawable/right_join"
            android:fontFamily="@font/hansuwon_r"
            android:gravity="left|center"
            android:inputType="textPassword"
            android:hint="비밀번호(6-16자 영문대소문자,숫자)"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/pwcheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/main_login"
            android:drawableLeft="@drawable/join_lock"
            android:drawableRight="@drawable/right_join"
            android:fontFamily="@font/hansuwon_r"
            android:gravity="left|center"
            android:inputType="textPassword"
            android:hint="비밀번호 확인"
            android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">

            <EditText
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/main_login"
                android:drawableLeft="@drawable/nickname_join"
                android:drawableRight="@drawable/right_join"
                android:fontFamily="@font/hansuwon_r"
                android:gravity="left|center"
                android:hint="닉네임"
                android:textSize="15dp" />

            <ImageButton
                android:id="@+id/nickname_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:background="@drawable/check" />
        </LinearLayout>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/main_login"
            android:drawableLeft="@drawable/email_join"
            android:drawableRight="@drawable/right_join"
            android:fontFamily="@font/hansuwon_r"
            android:gravity="left|center"
            android:hint="이메일"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/joinus_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fc8d8b"
            android:fontFamily="@font/kopubdotumlight"
            android:layout_marginTop="50dp"
            android:text="회원가입"
            android:textSize="25dp"
            android:textColor="#fafafa"/>
    </LinearLayout>

</LinearLayout>