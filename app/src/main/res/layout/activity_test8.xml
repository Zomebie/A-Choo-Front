<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.selfTest.Test8">

    <LinearLayout
        android:layout_marginTop="130dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Group7번째 이미지 -->
        <!-- SW(봄웜톤), SC(여름쿨톤), AW(가을웜톤), WC(겨울쿨톤)-->

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gabriola"
            android:text="check8"
            android:textStyle="bold"
            android:textSize="35dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text=" 화장품을 구매 시,선호하는 가격대는?"
            android:textSize="22dp"/>

        <RadioGroup
            android:id="@+id/radioGroup7_5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/money1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0 원 ~ 10,000원 미만"
                android:textSize="15dp"
                android:checked="false" />

            <RadioButton
                android:id="@+id/money2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10,000 원 ~ 20,000원 미만"
                android:textSize="15dp"
                android:checked="false" />

            <RadioButton
                android:id="@+id/money3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="20,000 원 ~ 30,000원 미만"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/money4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="30,000 원 ~ 40,000원 미만"
                android:textSize="15dp"
                android:checked="false" />

            <RadioButton
                android:id="@+id/money5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="40,000 원 ~ 50,000원 미만"
                android:textSize="15dp"
                android:checked="false" />

            <RadioButton
                android:id="@+id/money6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="50,000원 이상"
                android:textSize="15dp"
                android:checked="false" />
        </RadioGroup>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/preview"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/gabriola"
                android:onClick="onclick"
                android:text=" ← PREVIOUS"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/next"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/gabriola"
                android:onClick="onclick"
                android:text="NEXT →"
                android:textSize="25dp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>